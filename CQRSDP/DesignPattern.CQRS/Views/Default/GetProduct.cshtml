@model DesignPattern.CQRS.Cqrs.Results.GetProductByIdQueryResult
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <form method="get">
        <label>Id</label>
        <input type="text" class="form-control" asp-for="ProductId" />
        <br />
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="Name" />
        <br />
        <label>Stok Sayısı</label>
        <input type="text" class="form-control" asp-for="Stock" />
        <br />
        <label>Fiyat</label>
        <input type="text" class="form-control" asp-for="Price" />
        <br />
    </form>
</div>
